# Copy to .env and fill real password (URL-encoded if special chars)
# Base PostgreSQL connection (Azure Flexible Server)
DATABASE_URL=postgresql+psycopg://eduadmin:REPLACE_PASSWORD@julialabs.postgres.database.azure.com:5432/sistema_educativo?sslmode=require

# Optional Redis
# REDIS_URL=redis://localhost:6379/0

# Auto migrations
RUN_DB_MIGRATIONS=true

# Disable redis cache if not installed
# DISABLE_REDIS_CACHE=true# Configuración de Educational System
# Copia este archivo a .env y completa con tus valores reales

# ==================== GROQ API ====================
GROQ_API_KEY=your_groq_api_key_here

# ==================== AZURE SEARCH ====================
# Si no tienes Azure Search, el sistema usará almacenamiento local automáticamente
AZURE_SEARCH_SERVICE_NAME=juliaai
AZURE_SEARCH_ADMIN_KEY=your_azure_search_key_here
AZURE_SEARCH_INDEX_NAME=universidad
USE_LOCAL_FALLBACK=true  # Usar almacenamiento local si Azure falla

# ==================== GOOGLE OAUTH ====================
# Obtén estas credenciales en https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback
TEACHER_EMAILS=profesor1@colegio.com,profesor2@colegio.com

# ==================== BASE DE DATOS ====================
# SQLite por defecto (archivo en ./data/users.db). Para Postgres cambia a:
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/mi_basedatos
DATABASE_URL=sqlite:///./data/users.db

# ==================== STRIPE ====================
# Obtén estas claves en https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================== JWT ====================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================== APLICACIÓN ====================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000
PORT=8000

# ==================== OPENAI (OPCIONAL) ====================
OPENAI_API_KEY=your_openai_api_key_here